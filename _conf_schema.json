{
  "enabled": {
    "description": "是否启用TTS文本过滤功能",
    "type": "bool",
    "default": true
  },
  "max_length": {
    "description": "最大朗读字数（超过此字数将跳过TTS，0表示无限制）",
    "type": "int",
    "default": 200,
    "hint": "范围：0-1000"
  },
  "emoticon_patterns": {
    "description": "颜文字过滤规则（正则表达式列表）",
    "type": "list",
    "items": { "type": "string" },
    "default": [
      "[（(][^（()]*[）)]",
      "[＞>][＿_][＜<]",
      "[＾^][＿_][＾^]",
      "[oO][＿_][oO]",
      "[xX][＿_][xX]",
      "[－-][＿_][－-]",
      "[（(][；;][＿_][；;][）)]"
    ]
  },
  "filter_words": {
    "description": "直接过滤的词汇（完全不朗读）",
    "type": "list",
    "items": { "type": "string" },
    "default": [
      "orz",
      "OTZ", 
      "QAQ",
      "QWQ",
      "TAT",
      "TUT"
    ]
  },
  "replacement_words": {
    "description": "替换词汇配置（格式：原词|替换词，一行一个）",
    "type": "list",
    "items": { "type": "string" },
    "default": [
      "233|哈哈哈",
      "666|厉害",
      "999|很棒",
      "6|厉害",
      "555|呜呜呜"
    ]
  },
  "filter_special_chars": {
    "description": "是否过滤特殊符号和表情",
    "type": "bool",
    "default": true
  },
  "special_char_patterns": {
    "description": "特殊符号过滤规则（正则表达式列表）",
    "type": "list",
    "items": { "type": "string" },
    "default": [
      "[★☆♪♫♬♩♡♥❤️💖💕💗💓💝💟💜💛💚💙🧡🤍🖤🤎💔❣️💋]",
      "[→←↑↓↖↗↘↙↔↕↺↻]"
    ]
  },
  "filter_repeats": {
    "description": "是否过滤重复字符（如：哈哈哈哈 -> 哈哈）",
    "type": "bool",
    "default": true
  },
  "max_repeat_count": {
    "description": "保留的最大重复字符数量",
    "type": "int",
    "default": 2,
    "hint": "范围：1-5"
  },
  "debug_mode": {
    "description": "是否启用调试模式，显示详细的过滤过程",
    "type": "bool",
    "default": false
  }
}